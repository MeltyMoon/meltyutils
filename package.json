{
	"name": "meltyutils",
	"version": "1.1.4",
	"description": "Various Utilities",
	"main": "dist/meltyutils.js",
	"module": "dist/meltyutils.esm.js",
	"author": "MeltyMoon",
	"repository": {
		"type": "github",
		"url": "https://github.com/MeltyMoon/meltyutils"
	},
	"license": "MIT",
	"private": false,
	"devDependencies": {
		"@babel/cli": "^7.21.0",
		"@babel/core": "^7.21.0",
		"@babel/preset-env": "^7.20.2",
		"@discordjs/docgen": "^0.12.1",
		"@rollup/plugin-babel": "^6.0.3",
		"@rollup/plugin-commonjs": "^24.0.1",
		"@rollup/plugin-node-resolve": "^15.0.1",
		"eslint": "^8.35.0",
		"node-sri": "^1.1.1",
		"rollup": "^3.18.0",
		"typescript": "^4.9.5"
	},
	"scripts": {
		"submit": "./submit.sh",
		"docs": "docgen -i './src/*.js' './src/**/*.js' -c ./docs/index.json -r ./ -o ./docs/docs.json",
		"build": "npm run build-readme && npm run docs && npm run js-compile",
		"build-readme": "node build/make-readme.js",
		"js-compile": "npm run js-compile-standalone && npm run js-compile-standalone-esm",
		"js-compile-standalone": "rollup --environment ESM:false --config build/rollup.config.js --sourcemap",
		"js-compile-standalone-esm": "rollup --environment ESM:true --config build/rollup.config.js --sourcemap"
	}
}
